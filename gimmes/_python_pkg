#!/bin/bash
set -o errexit -o pipefail

gimme python

PKG=${0##*/}
if ! has "$PKG"; then
	if [[ "$OS" = "Darwin" ]]; then
		mkdir -p "$PYTHONPATH"
		easy_install -d "$PYTHONPATH" "$PKG"
		ln -sfv "$PYTHONPATH/$PKG" "$(brew --prefix)/bin/$PKG"
	else
		has pip  ||  sudo easy_install "$PKG"
		sudo pip
	fi
fi
