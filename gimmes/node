#!/bin/bash
set -o errexit -o pipefail
if ! has node; then
	gimme gcc git
	if [[ "$OS" = "Darwin" ]]; then
		gimme_pkg node
	else
		gimme_pkg nodejs npm libgnome-keyring-dev fakeroot
		sudo npm config set python /usr/bin/python2 -g
		sudo update-alternatives --install /usr/bin/node node /usr/bin/nodejs 10
	fi
fi
